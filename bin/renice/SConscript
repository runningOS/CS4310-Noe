#use similar structure from wait and sleep

Import('build_env')

env = build_env.Clone()
env.UseLibraries([ 'libposix', 'liballoc', 'libstd', 'libexec',
                   'libarch', 'libipc', 'libruntime', 'libapp', 'libfs' ])
env.UseServers(['core', 'filesystem'])
env.TargetProgram('renice', Glob('*.cpp'), env['bin'])